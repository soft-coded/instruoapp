<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/profile.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-xl-4">
                <div class="card-box text-center">
                    <h4 class="mb-0"><%= user.name %></h4>
                    <p class="text-muted"><%= user.username %></p>
                    <div class="text-left mt-3">
                        <p class="text-muted mb-2 font-13"><strong>Full Name :</strong> <span class="ml-2"><%= user.name %></span></p>
                        <p class="text-muted mb-2 font-13"><strong>Mobile :</strong><span class="ml-2"><%= user.phone %></span></p>
                        <p class="text-muted mb-2 font-13"><strong>Email :</strong> <span class="ml-2"><%= user.username %></span></p>
                        <p class="text-muted mb-2 font-13"><strong>Last Seen :</strong> <span class="ml-2"><%= user.lastSeen %></span></p>
                        <a href="/">Go Home</a>
                    </div>
                        
                </div> <!-- end card-box -->

            </div> <!-- end col-->

            <div class="col-lg-8 col-xl-8">
                <div class="card-box">
                    <div class="tab-content">

                        <div class="tab-pane show active" id="about-me">

                            <h5 class="mb-4">Liked posts</h5>

                            <ul class="list-unstyled">
                                <% likedPosts.forEach(function(post){ %>
                                    <li>
                                        <h5 class="mt-0 mb-1"><%= post.title %></h5>
                                        <p>Posted on <%= post.date %> by <%= post.op %></p>
                                        <p class="text-muted mt-2"><%= post.heading %></p>
                                        <a href="/post/<%= post.postId %>" class="btn btn-primary">Read More &rarr;</a>
                                        <hr>
                                    </li>                                   
                                <% }) %>
                            </ul>
                        </div>
                        <!-- end settings content-->

                    </div> <!-- end tab-content -->
                </div> <!-- end card-box-->

            </div> <!-- end col -->
        </div>
    </div>
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>

</html>