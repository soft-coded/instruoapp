<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/profile.css">
</head>
<body>
    <div class="container">
        <div class="col-lg-8 col-xl-8">
            <div class="card-box">
                <div class="tab-content">

                    <div class="tab-pane show active" id="about-me">

                        <h5 class="mb-4">Admin requests</h5>
                        <form action="/requests/for_admin/<%=reqKey%>" method="POST">
                            <ul class="list-unstyled">
                                <% reqs.forEach(function(req){ %>
                                    <li>
                                        <span class="mt-0 mb-1"><%= req.username %></span>&nbsp; &nbsp;
                                        <span class="text-muted mt-2"><%= req.name %></span>&nbsp; &nbsp;
                                        <span class="text-muted mt-2"><%= req.phone %></span>&nbsp; &nbsp;
                                        <input type="checkbox" name="granted[]" value="<%=req.username%>">
                                        <label>Make admin</label>&nbsp; &nbsp;
                                        <input type="checkbox" name="rejected[]" value="<%=req.username%>">
                                        <label>Discard Request</label>
                                        <hr>
                                    </li>                                   
                                <% }) %>
                            </ul>
                            <button type="submit">Save</button>
                        </form>
                    </div>

                </div> 
            </div>
        </div>
    </div>
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>

</html>